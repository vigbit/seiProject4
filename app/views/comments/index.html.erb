<p id="notice"><%= notice %></p>

<div class="card" style="width: 30rem;">
<h6>Comments</h6>
<% @comments.each do |comment|%>
  <ul class="list-group">
      <li class="list-group-item"><%= comment.content %></li>
  </ul>
  <tr>
  <td><%= link_to 'Show campaign', [@campaign] %></td>
  <td><%= link_to 'Edit comment', edit_campaign_comment_path(@campaign, comment) %></td>
  <td><%= link_to 'Destroy comment', [@campaign, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>

</div>


<%= link_to 'Add New Comment', new_campaign_comment_path(@campaign), class: "btn btn-primary" %>

